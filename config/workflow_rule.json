{
  "workflow_name": "Trigger FAWRI API on Bill Payment",
  "description": "Triggers the FAWRI API when you record a payment to a vendor (bill is paid)",
  "module": "Bills",
  "trigger": {
    "workflow_type": "Event Based",
    "event": "Edited",
    "execute_when": "When a Bill is Edited (catches payment status changes)"
  },
  "conditions": {
    "field": "Payment Status",
    "operator": "is",
    "value": "Paid"
  },
  "actions": {
    "type": "Immediate Actions",
    "action": "Custom Functions",
    "function_name": "triggerFawriApi"
  },
  "setup_instructions": [
    "1. Settings > Automation > Workflow Rules",
    "2. + New Workflow Rule",
    "3. Module: Bills",
    "4. When a Bill is: Edited",
    "5. Condition: Payment Status is Paid",
    "6. Action: Custom Functions > triggerFawriApi",
    "7. Save and Activate"
  ]
}
